<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>

    <% if task.completed %>
      <li><i class="far fa-check-square"></i> <%= link_to "#{task.title}", task_path(task) %> /
        <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></li>
    <% else %>
      <li><i class="far fa-square"></i> <%= link_to "#{task.title}", task_path(task) %> /
        <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></li>
    <% end %>
  <% end %>

</ul>

<%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, new_path %>
